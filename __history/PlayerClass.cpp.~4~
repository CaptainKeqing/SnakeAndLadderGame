#include "PlayerClass.h"
#include <string>
#include <iostream>
Player::Player(const std::string& name) : m_name{ name }, hasWon{ false }
{
}

void Player::move(int steps) {
	myPosition.advance(steps, playerImage);
	std::cout << m_name << " is now at " << myPosition.getPosition() << '\n' <<'\n';
	if (myPosition.getPosition() == 100)
	{
		hasWon = true;
	}
}
